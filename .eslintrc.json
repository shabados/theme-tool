{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "rules": {
    "array-bracket-spacing": [
      "error",
      "always"
    ],
    "arrow-parens": [
      "error",
      "as-needed",
      {
        "requireForBlockBody": false
      }
    ],
    "react/jsx-filename-extension": 0,
    "react/jsx-props-no-spreading": 0,
    "react/object-curly-newline": 0,
    "import/prefer-default-export": 0,
    "max-len": 0,
    "object-curly-newline": [
      "error",
      {
        "consistent": true
      }
    ],
    "space-in-parens": [
      "error",
      "always",
      {
        "exceptions": [
          "empty"
        ]
      }
    ],
    "semi": [
      "error",
      "never"
    ],
    "func-names": [
      "error",
      "never"
    ],
    // Rules are no longer necessary React v17
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off"
  }
}